<div class="showback">
    <div class="page-header">
        <div class="pull-right">
            <a href="#" class="btn btn-default"><i
                    class="fa fa-arrow-circle-left"></i> {{translate 'Back'}}
            </a>
        </div>
        <h3><i class="fa fa-angle-right"></i> {{translate 'Error'}}</h3>

    </div>

    <div class="page-body">
        <p class="alert alert-danger">
            <strong>Error!</strong> <span>{{{message}}}</span>
        </p>

        <p>
            <a class="btn btn-default" href="#" id="{{id}}-back"><i class="fa fa-arrow-left"></i> {{translate 'Back'}}
            </a>
            <a class="btn btn-default" href="#"><i class="fa fa-home"></i> {{translate 'Home'}}</a>
        </p>

    </div>
</div>
