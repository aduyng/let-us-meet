<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{translate 'Attendees'}}</h3>
    </div>
    {{#if attendees}}
        <ul class="list-group">
            {{#each attendees}}
                <li class="list-group-item"><img src="{{markerUrl}}" /> {{name}}</li>
            {{/each}}
        </ul>
    {{else}}
        <div class="panel-body">
            No one is invited.
        </div>
    {{/if}}

    <div class="panel-footer">
        <button class="btn btn-success btn-block" id="{{id}}-invite"><i class="fa fa-user-plus"></i> Invite</button>
    </div>
</div>
