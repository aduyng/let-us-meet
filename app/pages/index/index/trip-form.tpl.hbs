<div class="form-group required">
    <label class="control-label" for="{{id}}-name">{{translate 'Trip Name'}}</label>
    <input type="text" class="form-control {{id}}-field" id="{{id}}-name" placeholder="{{translate 'Enter Trip Name'}}" value="{{trip.name}}">
</div>

<div class="form-group required">
    <label class="control-label" for="{{id}}-date-of-travel">{{translate 'Date of Travel'}}</label>
    <input type="date" id="{{id}}-date-of-travel" class="form-control {{id}}-field"
           placeholder="{{translate 'Select the date of travel'}}"
           value="{{formatDateForDateInput trip.dateOfTravel}}"/>
</div>