<div class="panel panel-default">
    <div class="panel-heading">
        {{#if isCreator}}
        <div class="btn-group pull-right">
            <button class="btn btn-default btn-xs" id="{{id}}-edit"><i class="fa fa-edit"></i></button>
            <button class="btn btn-default btn-xs" id="{{id}}-remove"><i class="fa fa-trash-o text-danger"></i>
            </button>
        </div>
        {{/if}}
        <h3 class="panel-title">{{translate 'Trip Information'}}</h3>
    </div>
    <div class="panel-body">
        <div class="form-group required">
            <label class="control-label" for="{{id}}-name">{{translate 'Trip Name'}}</label>
            <input type="text" class="form-control {{id}}-field" id="{{id}}-name" data-field="name" placeholder="{{translate 'Enter Trip Name'}}" value="{{trip.name}}">
        </div>

        <div class="form-group required">
            <label class="control-label" for="{{id}}-date-of-arrival">{{translate 'Date of Arrival'}}</label>
            <input type="date" id="{{id}}-date-of-arrival" class="form-control {{id}}-field" data-field="dateOfArrival" placeholder="{{translate 'Select the date of arrival'}}" value="{{formatDateForDateInput trip.dateOfArrival}}" />
        </div>

        <div class="form-group required">
            <label class="control-label" for="{{id}}-keywords">{{translate 'Destination Category'}}</label>
            <input type="hidden" id="{{id}}-keywords" class="form-control {{id}}-field" data-field="keywords" placeholder="{{translate 'Search place by keywords'}}" value="{{trip.keywords}}" />
        </div>
    </div>
</div>
