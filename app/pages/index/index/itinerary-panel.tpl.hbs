<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{translate 'My Itinerary'}}</h3>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <label for="{{id}}-from">From</label>
            <input type="hidden" class="form-control" id="{{id}}-from" value="{{itinerary.from.id}}"/>
        </div>
        <div class="form-group">
            <label for="{{id}}-to">To</label>
            <input type="hidden" class="form-control" id="{{id}}-to" value="{{itinerary.to.id}}"/>
        </div>
        <div class="form-group">
            <label for="{{id}}-to">Cheapest Price (USD)</label>
            <p class="form-control-static" id="{{id}}-price">{{itinerary.price}}</p>
        </div>
    </div>
    <div class="panel-footer">
        <button class="btn btn-block btn-primary" id="{{id}}-book"><i class="fa fa-cart-plus"></i> {{translate 'Book Now!'}}</button>
    </div>
</div>


